#!/bin/sh

if test -z "$JAVA_HOME"; then
  JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home
fi

./configure                                         \
  --with-python-headers=/usr/include/python2.6      \
  --with-java-home=$JAVA_HOME                       \
  --with-webui                                      \
  --with-included-zookeeper $@
